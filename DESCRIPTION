Package: spnaf
Type: Package
Title: Spatial Network Autocorrelation for Flow Data
Version: 0.1.0
Authors@R: c(
    person(given="Youngbin", family="Lee", email = "youngbin@snu.ac.kr", role = c("aut", "cre"), comment = c(ORCID = "0000-0003-3466-6495")),
